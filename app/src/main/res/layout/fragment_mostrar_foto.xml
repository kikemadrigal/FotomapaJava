<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Fotos.MostrarFotoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="Mostrar foto" />

    <ImageView
        android:id="@+id/imageViewMostrarFotoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sinfoto"
        />

    <TextView
        android:id="@+id/textViewTextoMostrarFotoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_margin="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewOtrosDatosMostrarFotoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


</LinearLayout>